---
const {title, description, githubLink, link, tags} = Astro.props;

import Tag from "./Tag.astro";
---
<div class="relative pb-4 border-b border-neutral-800 mt-5">
    <div class="flex items-start justify-between cursor-pointer">
        <div class="flex items-center gap-4 flex-1">
            <div class="flex-1">
                <div class="flex justify-between gap-3">
                    <h3 class="font-medium text-sm">{title}</h3>
                </div>
                <div class="flex items-center gap-2 mt-2">
                    {tags.map((tag: string) => (
                        <Tag tagText={tag} color="yellow" />
                    ))}
                </div>
            </div>
        </div>
    </div>
    <p class="overflow-hidden text-neutral-400 text-sm leading-relaxed mt-2" style="height: auto; opacity: 1;">{description}</p>
    <div class="flex justify-center items-center gap-2 mb-2 mt-1">
        <a href={githubLink} target="_blank" rel="noopener noreferrer" class="p-2 rounded-full border border-neutral-400 text-neutral-400 hover:border-blue-500 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="GitHub"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg></a>
        {link ? <a href={link} target="_blank" rel="noopener noreferrer" class="p-2 rounded-full border border-neutral-400 text-neutral-400 hover:border-blue-500 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="External Link"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-globe-icon lucide-globe"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg></a> : null}
    </div>
</div>