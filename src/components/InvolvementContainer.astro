---
const {title, description, company} = Astro.props;

---
<div class="relative pb-4 border-b border-neutral-800 mt-5">
    <div class="flex items-start justify-between cursor-pointer">
        <div class="flex items-center gap-4 flex-1">
            <div class="flex-1">
                <div class="flex justify-between gap-3">
                    <h3 class="font-medium text-sm">{title}</h3>
                </div>
                <div class="flex items-center gap-2 mb-2">
                    <span class="text-xs text-neutral-300">{company}</span>
                </div>
            </div>
        </div>
    </div>
    <p class="overflow-hidden text-neutral-400 text-sm leading-relaxed mt-2" style="height: auto; opacity: 1;">{description}</p>
</div> 