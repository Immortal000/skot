---
import Layout from '../layouts/Layout.astro';
import Tag from '../components/Tag.astro';
import WorkContainer from '../components/WorkContainer.astro';
import Divider from '../components/Divider.astro';
import ProjectContainer from '../components/ProjectContainer.astro';
import InvolvementContainer from '../components/InvolvementContainer.astro';
import CenterContainer from '../components/CenterContainer.astro';
---

<Layout>
	<CenterContainer>
		<header class="mb-12 mt-20">
			<h1 class="text-2xl mb-3">Siddarth Kotthur</h1>
			<p class="text-lg text-gray-300 max-w-xl leading-relaxed">
				I'm a senior at <span class="text-white font-bold">Texas A&M University</span> majoring in Computer Science. 
				I love turning <span class="text-pink-400 font-semibold">big ideas</span> into reality—whether it’s crafting <span class="italic text-indigo-400 font-medium">sleek interfaces</span>, building <span class="text-emerald-400 font-bold">AI-powered tools</span>, or designing systems that just <span class="italic text-yellow-300">click</span>.
			  </p>
			  
			<div>
				<div class="flex items-center justify-center space-x-2">
					<a href="https://github.com/Immortal000" target="_blank" rel="noopener noreferrer" class="p-2 rounded-full text-neutral-400 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="GitHub">
					   <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github">
						  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
						  <path d="M9 18c-4.51 2-5-2-7-2"></path>
					   </svg>
					</a>
					<a href="https://www.linkedin.com/in/siddarthkot" target="_blank" rel="noopener noreferrer" class="p-2 rounded-full text-neutral-400 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="LinkedIn">
					   <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin">
						  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
						  <rect width="4" height="12" x="2" y="9"></rect>
						  <circle cx="4" cy="4" r="2"></circle>
					   </svg>
					</a>
					<a href="/resume" target="_blank" rel="noopener noreferrer" class="p-2 rounded-full text-neutral-400 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="Resume">
					 <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-file-icon lucide-file"><path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z"/><path d="M14 2v4a2 2 0 0 0 2 2h4"/></svg>
					</a>
				 </div>
			</div>
		</header>
	
		<span id="experiences"></span>
		<Divider title="Experiences" />
	
		<section>
			<WorkContainer
				title="Software Development Intern"
				description="Developed an iOS CRM app to help 20,000+ Paycom sales reps easily identify and connect with potential business leads, streamlining their outreach and sales workflow."
				startDate="May 2025"
				endDate="Aug 2025"
				company="Paycom"
				tags={['Swift', 'C#', 'SQL']}
				logo="src/assets/paycom.png"
			/>
	
			<WorkContainer
				title="Software Development Intern"
				description="Designed a platform for 1,200+ former employees to browse job openings and submit referrals, while improving backend performance and database efficiency for a smoother user experience."
				startDate="May 2024"
				endDate="Aug 2024"
				company="Paycom"
				tags={['React.js', 'Node.js', 'SQL']}
				logo="src/assets/paycom.png"
			/>
	
			<WorkContainer
				title="Data Scientist and App Developer"
				description="Created a desktop app to automate plant genetic data analysis and reporting, replacing a slow manual process with a fast, error-free workflow and leading the entire design and development."
				startDate="Feb 2023"
				endDate="Dec 2024"
				company="Advanta Seeds"
				tags={['Python']}
				logo="src/assets/advanta.png"
			/>

			<WorkContainer
				title="Full Stack Developer"
				description="Redesigned landing pages with interactive tables and graphs to enhance user experience, and built reusable Vue.js components to streamline development and speed up delivery."
				startDate="Dec 2021"
				endDate="Feb 2024"
				company="Satoshi Terminal"
				tags={['Vue.js']}
				logo="src/assets/terminal.svg"
			/>
		</section>
	
		<span id="projects"></span>
		<Divider title="Projects" />
	
		<section>
			<ProjectContainer
				title="Ronis"
				description="Built an interactive dashboard for Roni’s Mac Bar that analyzes order data to reveal customer trends, optimize inventory, and support smarter, real-time decision-making through data-driven insights by leveraging LLMs and vector embeddings."
				githubLink="https://github.com/minim0no/tamu-datathon-24/"
				link="https://tamu-datathon-24.pages.dev/"
				tags={['LLMs', 'Vectors']}
			/>
	
			<ProjectContainer
				title="Scout"
				description="Created Scout, a tool that translates Braille to English and ASL gestures to speech, enabling more inclusive and accessible communication for individuals with visual or hearing impairments."
				githubLink="https://github.com/WarrenWu4/scout"
				tags={['OCR', 'Speech Recognition']}
			/>
	
			<ProjectContainer
				title="ContentRadar"
				description="Built a tool that analyses website usage patterns and scours the web to deliver personalised recommendations, connecting users with what they love, effortlessly."
				githubLink="https://github.com/mithunb9/ContentRadar"
				tags={['LLMs', 'Vectors']}
			/>
	
			<ProjectContainer
				title="TAMU SASE Attendance System"
				description="Developed an effective attendance system for 1200 students part of TAMU SASE."
				githubLink="https://github.com/Immortal000/SASE-TAMU"
				tags={['Next.js', 'Supabase']}
			/>
	
			<ProjectContainer
				title="Aero Check"
				description="Built a portable wireless device to detect hazardous gases, particularly hydrocarbons in pipelines, and developed a companion website to track and visualize real-time measurements."
				githubLink="https://github.com/Immortal000/aero.check"
				tags={['Arduino', 'Flask']}
			/>
		</section>
	
		<span id="involvements"></span>
		<Divider title="Involvements"/>
	
		<section>
			<InvolvementContainer
				title="Undergraduate Student Researcher"
				description="Applied K-means clustering to analyze game camera data and support more effective wildlife management."
				company="Texas A&M"
			/>
	
			<InvolvementContainer
				title="Undergraduate Teaching Assistant"
				description="Assisted in teaching and grading assignments for Introduction to Computer Science."
				company="Texas A&M"
			/>
	
			<InvolvementContainer
				title="Project Manager"
				description="Led development of a YouTube clone, trading simulator, and quiz battle platform with Aggie Coding Club, helping deploy full-stack projects that gave 50+ students hands-on experience."
				company="Aggie Coding Club"
			/>
	
			<InvolvementContainer
				title="Web and Bot Developer"
				description="Developed and maintained the landing page and discord bot for Texas A&M Esports."
				company="Texas A&M Esports"
			/>
		</section>
	
		<div class="bg-black/80 border-neutral-800 max-w-3xs mx-auto sticky mt-10 bottom-4 shadow-2xl shadow-black/50 backdrop-blur-md border rounded-full px-4 py-3 transition-all duration-300">
			<div class="flex items-center justify-center space-x-2">
					<a href="#experiences" rel="noopener noreferrer" class="p-2 rounded-full text-neutral-400 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="Experiences">
					   <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-briefcase">
						  <path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
						  <rect width="20" height="14" x="2" y="6" rx="2"></rect>
					   </svg>
					</a>
					<a href="#projects" rel="noopener noreferrer" class="p-2 rounded-full text-neutral-400 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="Projects">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-folder-open-dot-icon lucide-folder-open-dot"><path d="m6 14 1.45-2.9A2 2 0 0 1 9.24 10H20a2 2 0 0 1 1.94 2.5l-1.55 6a2 2 0 0 1-1.94 1.5H4a2 2 0 0 1-2-2V5c0-1.1.9-2 2-2h3.93a2 2 0 0 1 1.66.9l.82 1.2a2 2 0 0 0 1.66.9H18a2 2 0 0 1 2 2v2"/><circle cx="14" cy="15" r="1"/></svg>
					</a>
					<a href="#involvements" rel="noopener noreferrer" class="p-2 rounded-full text-neutral-400 hover:text-blue-500 hover:bg-neutral-800 transition-all duration-200" title="Involvements">
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-contact-icon lucide-contact"><path d="M16 2v2"/><path d="M7 22v-2a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2"/><path d="M8 2v2"/><circle cx="12" cy="11" r="3"/><rect x="3" y="4" width="18" height="18" rx="2"/></svg>
					</a>
				 </div>
		 </div>
	</CenterContainer>
</Layout>
